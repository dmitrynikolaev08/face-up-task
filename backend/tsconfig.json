{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "types": ["jest", "node"]
  },
  "include": [
    "src/**/*",
    "src/**/*.test.ts",
    "jest.config.ts"
  ],
  "exclude": ["node_modules"]
}
